<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" 
         xmlns="http://xmlns.jcp.org/xml/ns/javaee" 
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <!-- Define Servlets -->
    <servlet>
        <servlet-name>AuthController</servlet-name>
        <servlet-class>controllers.AuthController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewAllOrdersController</servlet-name>
        <servlet-class>controllers.ViewAllOrdersController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>VerifyOtpController</servlet-name>
        <servlet-class>controllers.VerifyOtpController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>VerifyEmailController</servlet-name>
        <servlet-class>controllers.VerifyEmailController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginFacebookHandlerController</servlet-name>
        <servlet-class>controllers.LoginFacebookHandlerController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginGoogleHandlerController</servlet-name>
        <servlet-class>controllers.LoginGoogleHandlerController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ResetPasswordController</servlet-name>
        <servlet-class>controllers.ResetPasswordController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EventController</servlet-name>
        <servlet-class>controllers.EventController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AllEventsController</servlet-name>
        <servlet-class>controllers.AllEventsController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EventDetailController</servlet-name>
        <servlet-class>controllers.EventDetailController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProfileController</servlet-name>
        <servlet-class>controllers.ProfileController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ChangePasswordController</servlet-name>
        <servlet-class>controllers.ChangePasswordController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SearchEventController</servlet-name>
        <servlet-class>controllers.SearchEventController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FilterEventController</servlet-name>
        <servlet-class>controllers.FilterEventController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CategoryController</servlet-name>
        <servlet-class>controllers.CategoryController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EventSummaryController</servlet-name>
        <servlet-class>controllers.EventSummaryController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdminController</servlet-name>
        <servlet-class>controllers.AdminController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewAllTicketsController</servlet-name>
        <servlet-class>controllers.ViewAllTicketsController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TicketDetailController</servlet-name>
        <servlet-class>controllers.TicketDetailController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>controllers.LoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewCreatedEventsController</servlet-name>
        <servlet-class>controllers.ViewCreatedEventsController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>OrganizerEventDetailController</servlet-name>
        <servlet-class>controllers.OrganizerEventDetailController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>OrderSearchController</servlet-name>
        <servlet-class>controllers.OrderSearchController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>OrganizerOrdersController</servlet-name>
        <servlet-class>controllers.OrganizerOrdersController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>OrganizerEventController</servlet-name>
        <servlet-class>controllers.OrganizerEventController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewOrderDetailOrganizer</servlet-name>
        <servlet-class>controllers.ViewOrderDetailOrganizer</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewAllEventsAdminController</servlet-name>
        <servlet-class>controllers.ViewAllEventsAdminController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewEventDetailAdminController</servlet-name>
        <servlet-class>controllers.ViewEventDetailAdminController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ApproveEventController</servlet-name>
        <servlet-class>controllers.ApproveEventController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewApprovedEventsController</servlet-name>
        <servlet-class>controllers.ViewApprovedEventsController</servlet-class>
    </servlet>
    
    <!-- Define Servlet Mappings -->
    <servlet-mapping>
        <servlet-name>AuthController</servlet-name>
        <url-pattern>/auth</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewAllOrdersController</servlet-name>
        <url-pattern>/viewAllOrders</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>VerifyOtpController</servlet-name>
        <url-pattern>/verifyOtp</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>VerifyEmailController</servlet-name>
        <url-pattern>/verifyEmail</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginGoogleHandlerController</servlet-name>
        <url-pattern>/loginGoogleHandler</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginFacebookHandlerController</servlet-name>
        <url-pattern>/loginFacebookHandler</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ResetPasswordController</servlet-name>
        <url-pattern>/resetPassword</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EventController</servlet-name>
        <url-pattern>/event</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AllEventsController</servlet-name>
        <url-pattern>/allEvents</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EventDetailController</servlet-name>
        <url-pattern>/eventDetail</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SearchEventController</servlet-name>
        <url-pattern>/searchEvent</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FilterEventController</servlet-name>
        <url-pattern>/filterEvent</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CategoryController</servlet-name>
        <url-pattern>/category</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EventSummaryController</servlet-name>
        <url-pattern>/eventSummary</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdminController</servlet-name>
        <url-pattern>/admin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewAllTicketsController</servlet-name>
        <url-pattern>/viewAllTickets</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TicketDetailController</servlet-name>
        <url-pattern>/viewTicketDetail</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/LoginController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewCreatedEventsController</servlet-name>
        <url-pattern>/viewCreatedEvents</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>OrganizerEventDetailController</servlet-name>
        <url-pattern>/OrganizerEventDetailController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>OrderSearchController</servlet-name>
        <url-pattern>/searchOrders</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>OrganizerEventController</servlet-name>
        <url-pattern>/OrganizerEventController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>OrganizerOrdersController</servlet-name>
        <url-pattern>/organizerOrders</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewOrderDetailOrganizer</servlet-name>
        <url-pattern>/orderDetail</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewAllEventsAdminController</servlet-name>
        <url-pattern>/admin/viewAllEvents</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewEventDetailAdminController</servlet-name>
        <url-pattern>/admin/viewEventDetail</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ApproveEventController</servlet-name>
        <url-pattern>/admin/approveEvent</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewApprovedEventsController</servlet-name>
        <url-pattern>/admin/viewApprovedEvents</url-pattern>
    </servlet-mapping>
    
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>
    
    <welcome-file-list>
        <welcome-file>event</welcome-file>
    </welcome-file-list>
</web-app>
